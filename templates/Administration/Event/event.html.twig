{% extends 'Administration/base_administration.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <a href="{{ path('owp_administration_administration_content_event')}}" class="btn btn-default">Evènements</a>
{% endblock %}

{% block title %}Administration des évènements{% endblock %}
{% block content %}
<div class="flex">
    <h1 class="row">Gérer les évènements</h1>
    <div class="row">
        <a href="{{ path('owp_administration_administration_content_event_add')}}" class="btn btn-primary my-3">Ajouter un nouveau évènement</a>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Date de création</th>
                    <th scope="col">Date de modification</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.title }}</td>
                        <td>{{ event.createAt|date("d/m/Y H:i") }}</td>
                        <td>{{ event.updateAt|date("d/m/Y H:i") }}</td>
                        <td>
                            <a href="{{ path('owp_common_event_show', {'id': event.id}) }}" class='btn btn-success btn-xs' href=""><i class="fa fa-eye"></i></a>
                            <a href="{{ path('owp_administration_administration_content_event_edit', {'id': event.id}) }}" class='btn btn-info btn-xs' href=""><i class="fa fa-edit"></i></a>
                            <a href="{{ path('owp_administration_administration_content_event_delete', {'id': event.id}) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer cette actualité ?');" class='btn btn-danger btn-xs' href=""><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
