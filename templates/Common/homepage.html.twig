{% extends 'base.html.twig' %}

{% block title %}{% trans %}Home{% endtrans %}{% endblock %}
{% block body %}
    <div id="news" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for new in news|slice(0, 6) %}
                <li data-target="#news" data-slide-to="{{ loop.index0 }}" class="{{ loop.index0 == 0 ? 'active' }}"></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner bg-dark" role="listbox">
            {% for new in news|slice(0, 6) %}
                <div class="carousel-item {{ loop.index0 == 0 ? 'active' }}">
                    <!--<img class="first-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="First slide">-->
                    <div class="container">
                        <div class="carousel-caption d-none d-md-block text-left">
                            <h1 class="text-primary">{{ new.title }}</h1>
                            <span class="badge badge-primary font-italic">Publié le {{ new.createAt|date('d/m/Y') }}</span>
                            <span class="badge badge-primary font-italic">Mise à jour le {{ new.updateAt|date('d/m/Y')}}</span>
                            <p class="text-justify">{{ new.content|raw|striptags|slice(0,800) ~ '...' }}</p>
                            <p><a class="btn btn-primary" href="{{ path('owp_news_show', {'id': new.id}) }}" role="button">Lire la suite</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if news|length > 1 %}
            <a class="carousel-control-prev" href="#news" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Précédent</span>
            </a>
            <a class="carousel-control-next" href="#news" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Suivant</span>
            </a>
        {% endif %}
    </div>
    {% if events|length > 0 %}
        <div class="row col-lg-12">
            <div class="col-7 offset-lg-1 my-4">
                <a href="{{ path('owp_event_list') }}" class="text-body text-decoration-none float-right border-bottom border-primary pl-4">
                    <strong>Tous les évènements</strong>
                </a>
                <h2>Les prochains évènements</h2>
                {% for event in events %}
                    <div class="row my-4">
                		<div class="col-3 text-right">
                			<h1 class="display-4"><span class="badge badge-primary">{{ event.dateBegin|date('d') }}</span></h1>
                			<h3>{{ event.dateBegin|date('F')|trans }}</h3>
                			<h3 class="text-primary">{{ event.dateBegin|date('Y') }}</h3>
                		</div>
                		<div class="col-9">
                			<h3 class="text-uppercase"><strong>{{ event.title }}</strong></h3>
                			<ul class="list-inline">
                				<li class="list-inline-item"><i class="fa fa-info" aria-hidden="true"></i> {{ event.eventType.label }}</li>
                                {% if event.locationTitle is not empty %}<li class="list-inline-item"><i class="fa fa-location-arrow" aria-hidden="true"></i> {{ event.locationTitle }}</li>{% endif %}
                			</ul>
                			<p>{{ event.content|raw|striptags|slice(0,400) ~ '...' }}</p>
                            <a href="{{ path('owp_event_show', {'id': event.id}) }}" class="btn btn-primary stretched-link">Plus d'information</a>
                		</div>
                	</div>
                {% endfor %}
            </div>
            <div class="col-3 my-4">
                {% include 'Event/Block/calendar.html.twig' %}
            </div>
        </div>
    {% endif %}

    {% if news|length > 6 %}
        <div class="row m-0">
            <div class="col-lg-12 py-4 bg-light">
                <div class="offset-lg-1 col-lg-10">
                    <h2>Toutes les actualités</h2>
                    <div class="row">
                        {% for new in news|slice(6, news|length) %}
                            <div class="col-xs-10 col-sm-4 col-md-3">
                                <div class="card m-2">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ new.title }}</h5>
                                        <p>
                                            Publié le {{ new.createAt|date('d/m/Y') }}
                                            Mise à jour le {{ new.updateAt|date('d/m/Y')}}
                                        </p>
                                        <a href="{{ path('owp_news_show', {'id': new.id}) }}" class="btn btn-primary">Lire l'actualité</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
