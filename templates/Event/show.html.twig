{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event') }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event') }}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
{% endblock %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
    <div class="container my-4">
        {% if is_granted('ROLE_WEBMASTER') %}
        <div class="float-right">
            <a href="{{ path('admin_app_event_edit', {'id': event.id}) }}" class='btn btn-link btn-xs' href=""><i class="fa fa-edit fa-2x"></i></a>
            <a href="{{ path('admin_app_event_delete', {'id': event.id}) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer cette actualité ?');" class='btn btn-link btn-xs' href=""><i class="fa fa-trash fa-2x"></i></a>
        </div>
        {% endif %}
        <h1>{{ event.title }}</h1>
        <span class="badge">Publié le {{ event.createAt|date('d/m/Y') }}, mise à jour le {{ event.updateAt|date('d/m/Y')}}</span>
        <div class="mt-2">{{ event.content|raw }}</div>

        <div class="row">
            <div class="col-md-7">
                <h2>{{ 'main informations'| trans }}</h2>
                <table>
                    <tr><td class="font-weight-bold">{{ "date" | trans | capitalize }}</td><td></td></tr>
                    <tr><td class="font-weight-bold">{{ "event type" | trans | capitalize }}</td><td></td></tr>
                    <tr><td class="font-weight-bold">{{ "organizer" | trans | capitalize  }}</td><td></td></tr>
                </table>

                <h2>{{ 'location'| trans }}</h2>
                <b>{{ event.locationTitle | capitalize }}</b>
                {{ event.locationInformation | raw }}
                {# if event.latitude is not empty and event.longitude is not empty #}
                    <div class="mt-4">
                        <div id="map" lat="48.9291776" lon="2.2265856"></div>
                    </div>
                {# endif #}
            </div>

            <div class="col-md-4 col-offset-lg-1">
                <h2>{{ 'circuit'| trans | capitalize }}</h2>
                <table>
                    <tr><td class="font-weight-bold"></td><td></td></tr>
                    <tr><td class="font-weight-bold"></td><td></td></tr>
                    <tr><td class="font-weight-bold"></td><td></td></tr>
                </table>

                <h2>{{ 'entries'| trans | capitalize }}</h2>
                <table>
                    <tr><td class="font-weight-bold"></td><td></td></tr>
                    <tr><td class="font-weight-bold"></td><td></td></tr>
                    <tr><td class="font-weight-bold"></td><td></td></tr>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <h2>{{ 'comment' | trans | capitalize }}</h2>

            {% include '@FOSComment/Thread/async.html.twig' with {'id': 'event:' ~ event.id} %}
        </div>
    </div>

{% endblock %}
