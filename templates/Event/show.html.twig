{% extends 'content.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event') }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
    {{ encore_entry_link_tags('map') }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.20/datatables.min.css"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event') }}
    {{ encore_entry_script_tags('map') }}
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/datatables.min.js"></script>
{% endblock %}

{% block title %}{{ event.title }}{% endblock %}

{% block content_header %}
    {% include 'Event/show__header.html.twig' %}
{% endblock %}

{% block content_admin_actions %}
    <a href="{{ path('admin_app_event_edit', {'id': event.id}) }}" class='btn btn-outline-light' href=""><i class="fa fa-edit"></i> Modifier</a>
    <a href="{{ path('admin_app_event_delete', {'id': event.id}) }}" onclick="return confirm('Êtes vous sur de vouloir supprimer ?}');" class='btn btn-outline-light'><i class="fa fa-trash"></i> Supprimer</a>
{% endblock %}

{% block content_body %}
    <div class="row">
        <div class="col-12  col-lg-10 offset-lg-1">
            {{ _self.breadcrumb([{'label':'Liste des événements', 'class': '', 'url':'owp_event_list'}, {'label': event.title, 'class': 'active'}])}}
        </div>
        
        {% if event.content %}
            <div class="col-12 col-lg-10 offset-lg-1">{{ event.content|raw }}</div>
        {% endif %}

        <div class="col-12 col-lg-5 offset-lg-1">
            <div class="mb-4">
                {% include 'Event/show__main_informations.html.twig' %}
            </div>
            {% if event.locationTitle or event.locationInformation or (event.latitude and event.longitude) %}
                <div class="mb-4">
                    {% include 'Event/show__localisation.html.twig' %}
                </div>
            {% endif %}
        </div>

        <div class="col-12 col-lg-5 mb-4">
            {% if event.circuits|length > 0 %}
                {% include 'Event/show__circuits.html.twig' %}
            {% endif %}
            {% include 'Event/show__entries.html.twig' %}
        </div>

        {% include 'Event/show__sections.html.twig' %}

        <div class="col-10 offset-lg-1">
            <h2>Comentaires</h2>
            {% include '@FOSComment/Thread/async.html.twig' with {'id': 'event:' ~ event.id} %}
        </div>
    </div>
{% endblock %}
