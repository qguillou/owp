{% if events|length > 0 %}

    <div class="row m-4">
        <div class="col-12 col-lg-10 offset-lg-1">
            <div class="mb-4">
                <a href="{{ path('owp_event_list') }}" class="text-body text-decoration-none border-bottom border-primary pl-4 text-right float-right">
                    <strong>Tous les événements</strong>
                </a>
                <h2>Les prochains événements</h2>
            </div>
        </div>

        <div class="col-12 col-lg-7 offset-lg-1">
            <div class="row">
                {% for event in events %}
                    <div class="col-12 col-lg-6 mb-4">
                        {% include 'Event/item.html.twig' %}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-12 col-lg-3">
            {% include 'Event/Block/calendar.html.twig' %}
        </div>
    </div>
{% endif %}
