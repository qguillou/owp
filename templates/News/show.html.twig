{% extends 'content.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block content_header %}
    <img style="opacity:0.2" class="first-slide" src="https://l1visible.com/wp-content/uploads/2018/10/FORET.jpg" alt="First slide">
    <div class="container">
        <div class="carousel-caption d-none d-md-block text-left">
            <h1>{{ news.title }}</h1>
            <div class="text-white font-italic">
                Publié à {{ news.createAt|date('d/m/Y H:i:s') }}
                Modifié à {{ news.updateAt|date('d/m/Y H:i:s') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block content_admin_actions %}
    <a href="{{ path('admin_app_news_edit', {'id': news.id}) }}" class='btn btn-outline-light' href=""><i class="fa fa-edit"></i> Modifier</a>
    <a href="{{ path('admin_app_news_delete', {'id': news.id}) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer ?');" class='btn btn-outline-light' href=""><i class="fa fa-trash"></i> Supprimer</a>
{% endblock %}

{% block content_body %}
    <div class="row">
        <div class="col-12 col-lg-10 offset-lg-1">
            {{ news.content|raw }}
        </div>

        <div class="col-12 col-lg-10 offset-lg-1">
            <h2 class="my-4">Commentaires</h2>
            {% include '@FOSComment/Thread/async.html.twig' with {'id': 'news:' ~ news.id} %}
        </div>
    </div>
{% endblock %}
