{% extends 'content.html.twig' %}

{% block title %}{{ news.title }}{% endblock %}

{% block content_header %}
    <img style="opacity:0.2" class="first-slide" src="https://l1visible.com/wp-content/uploads/2018/10/FORET.jpg" alt="First slide">
    <div class="container">
        <div class="carousel-caption d-none d-md-block text-left">
            <h1>{{ news.title }}</h1>
            <div class="text-white font-italic">
                {{ 'owp_event_show_field_published_at'|trans ~ ' ' ~ news.createAt|date('d/m/Y H:i:s') }}
                {{ 'owp_event_show_field_updated_at'|trans ~ ' ' ~ news.updateAt|date('d/m/Y H:i:s') }}
            </div>

        </div>
    </div>
{% endblock %}

{% block content_admin_actions %}
    <a href="{{ path('admin_app_news_edit', {'id': news.id}) }}" class='btn btn-outline-light' href=""><i class="fa fa-edit"></i> {{ 'owp_button_update'|trans }}</a>
    <a href="{{ path('admin_app_news_delete', {'id': news.id}) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer cette actualité ?');" class='btn btn-outline-light' href=""><i class="fa fa-trash"></i> {{ 'owp_button_delete'|trans }}</a>
{% endblock %}

{% block content_body %}
    <div class="mt-2">{{ news.content|raw }}</div>

    <h2 class="my-4">{{ 'owp_news_show_title_comment' | trans }}</h2>
    {% include '@FOSComment/Thread/async.html.twig' with {'id': 'news:' ~ news.id} %}
{% endblock %}
