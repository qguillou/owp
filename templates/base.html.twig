<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} | {{ app_name }}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% include 'navbar_header.html.twig' %}
        <div class="container my-4 {{ app.request.get('_route') == 'owp_common_homepage' ? 'd-none' }}">
            <div class="row">
                <div class="btn-group btn-breadcrumb">
                    <a href="{{ path('owp_common_homepage')}}" class="btn btn-default"><i class="fa fa-home"></i></a>
                    {% block breadcrumb %}{% endblock %}
                </div>
            </div>
        </div>

        <div class="flex row m-4">
            {% block body %}{% endblock %}
        </div>

        {% include 'navbar_footer.html.twig' %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
