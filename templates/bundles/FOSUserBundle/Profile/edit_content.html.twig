{% trans_default_domain 'FOSUserBundle' %}

<div class="container row">
    <div class="col-lg-12">
        <h1>Modification de mes informations personnelles</h1>

        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            <div class="form-group">
                <label for="fos_user_registration_form_username">Nom d'utilisateur</label>
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label for="fos_user_registration_form_email">Adresse mail</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label for="fos_user_registration_form_current_password">Mot de passe</label>
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Enregistrer" />
                <a onclick="return confirm('Êtes vous sûr de vouloir supprimer votre compte ?');" href="{{ path('owp_common_user_delete', {'id': app.user.id}) }}">Supprimer mon compte</a>
            </div>
        {{ form_end(form) }}

    </div>
</div>
