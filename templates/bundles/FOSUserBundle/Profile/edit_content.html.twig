{% trans_default_domain 'FOSUserBundle' %}

<div class="col-12 col-lg-10 offset-lg-1">
    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        <div class="form-group">
            {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.current_password, {'attr': {'class': 'form-control'}}) }}
            <a href="{{ path('fos_user_change_password') }}" class="btn btn-link text-info">Modifier mon mot de passe</a>
        </div>

        <div class="form-group">
            {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <label>Num√©ro de licence FFCO</label>
            {{ form_widget(form.base, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div>
            <input class="btn btn-primary" type="submit" value="Enregistrer les modifications" />
            <button data-toggle="modal" data-target="#confirm-delete" data-href="{{ path('owp_user_delete', {'id': user.id}) }}" type="button" class="btn btn-link text-danger btn-xs">
                <i class="fa fa-trash" aria-hidden="true"></i> Supprimer mon compte
            </button>
            {% include 'Common/Modal/modal__confirm_delete.html.twig' %}
        </div>
    {{ form_end(form) }}
</div>
