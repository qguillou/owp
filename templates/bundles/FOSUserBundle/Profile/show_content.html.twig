{% trans_default_domain 'FOSUserBundle' %}

<div class="container row">
    <div class="col-lg-12">
        <h1>Mon espace privé</h1>
    </div>
    <div class="col-lg-5">
        <h3>Mes informations personnelles</h3>
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Nom d'utilisateur</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th scope="row">Adresse mail</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th scope="row">Prénom</th>
                    <td>{{ user.surname }}</td>
                </tr>
                <tr>
                    <th scope="row">Rôles</th>
                    <td>
                        {% for role in user.roles %}
                            <span class="badge badge-primary">{{ role }}</span>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
        <a class='btn btn-info btn-xs' href="{{ path('fos_user_profile_edit') }}"><i class="fa fa-edit"></i> Modifier</a>
        <a onclick="return confirm('Êtes vous sûr de vouloir supprimer votre compte ?');" class='btn btn-danger btn-xs' href="{{ path('owp_common_user_delete', {'id': user.id}) }}"><i class="fa fa-trash"></i> Supprimer</a>
    </div>
</div>
<div class="container row">
</div>
