{% trans_default_domain 'FOSUserBundle' %}

<div class="container row">
    <div class="col-lg-12">
        <h1>Vous n'avez pas encore de compte...</h1>
    </div>
</div>
<div class="container row">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'col-lg-6 fos_user_registration_register'}}) }}
        <div class="form-group">
            <label for="fos_user_registration_form_email">Adresse mail</label>
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <label for="fos_user_registration_form_plainPassword_first">Mot de passe</label>
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="fos_user_registration_form_plainPassword_second">Confirmation du mot de passe</label>
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary"  value="S'inscrire" />
        </div>
    {{ form_end(form) }}

    <div class="offset-lg-1 col-lg-4">
        <button class="btn btn-primary"><svg aria-hidden="true" class="svg-icon native iconGoogle" width="18" height="18" viewBox="0 0 18 18"><path d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 0 0 2.38-5.88c0-.57-.05-.66-.15-1.18z" fill="#4285F4"></path><path d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2a4.8 4.8 0 0 1-7.18-2.54H1.83v2.07A8 8 0 0 0 8.98 17z" fill="#34A853"></path><path d="M4.5 10.52a4.8 4.8 0 0 1 0-3.04V5.41H1.83a8 8 0 0 0 0 7.18l2.67-2.07z" fill="#FBBC05"></path><path d="M8.98 4.18c1.17 0 2.23.4 3.06 1.2l2.3-2.3A8 8 0 0 0 1.83 5.4L4.5 7.49a4.77 4.77 0 0 1 4.48-3.3z" fill="#EA4335"></path></svg>S'inscrire avec Google</button>
    </div>
</div>

<div class="container row">
    <div class="col-lg-12">
        <h1>Vous avez déjà un compte...</h1>
    </div>
    <div class="col-lg-12">
        Accédez à la page de connexion <a href="{{ path('fos_user_security_login') }}">connectez-vous</a>
    </div>
</div>
