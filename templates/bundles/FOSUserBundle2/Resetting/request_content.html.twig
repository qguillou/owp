{% trans_default_domain 'FOSUserBundle' %}

<div class="container row">
    <div class="col-lg-12">
        <h1>Réinitialisation de votre mot de passe</h1>
    </div>
</div>
<div class="container row">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="col-lg-6 fos_user_resetting_request">

        <div class="form-group">
            <label for="username">Adresse mail</label>
            <input type="text" id="username" class="form-control" name="username" required="required" />
        </div>

        <div class="form-group">
            <input type="submit" id="submit" class="btn btn-primary" name="submit" value="Réinitialiser votre mot de passe" />
            <a href="{{ path('fos_user_security_login') }}">Se connecter</a>
        </div>
    </form>

</div>
